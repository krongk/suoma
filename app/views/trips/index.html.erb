
<div class="header-title">
  <div class="row">
    <div class="col-md-6">
      <h1>旅游线路</h1>
    </div>
    <div class="col-md-6 text-right">
      <%= link_to '添加线路', new_trip_path, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>编号</th>
      <th>名称</th>
      <th colspan="2">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.id %></td>
        <td><%= trip.name %></td>
        <td><%= link_to '修改', edit_trip_path(trip) %></td>
        <td><%= link_to '删除', trip, method: :delete, data: { confirm: '确定要删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

