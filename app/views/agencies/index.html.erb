
<div class="header-title">
  <div class="row">
    <div class="col-md-6">
      <h1>组团社</h1>
    </div>
    <div class="col-md-6 text-right">
      <%= link_to '添加组团社', new_agency_path, class: 'btn btn-primary btn-lg'  %>
    </div>
  </div>
</div>


<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>编号</th>
      <th>名称</th>
      <th>地址</th>
      <th colspan="2">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @agencies.each do |agency| %>
      <tr>
        <td><%= agency.id %></td>
        <td><%= agency.name %></td>
        <td><%= agency.address %></td>
        <td><%= link_to new_agency_agency_contact_path(agency), class: 'btn btn-info' do %>
            <i class="fa fa-user"></i> 添加联系人
          <% end %>
        </td>
        <td>
          <%= link_to '查看', agency %>｜
          <%= link_to '修改', edit_agency_path(agency) %>｜
          <%= link_to '删除', agency, method: :delete, data: { confirm: '确定要删除吗?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

