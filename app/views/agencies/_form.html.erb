<!-- Form starts -->
<div class="awidget">
   <div class="awidget-head">
      <h3>组团社</h3>
   </div>
   <div class="awidget-body">
       
<%= simple_form_for(@agency) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

   </div>
</div>
<!-- Form ends -->    