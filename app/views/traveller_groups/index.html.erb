<div class="header-title">
  <div class="row">
    <div class="col-md-6">
      <h1>游客小组</h1>
    </div>
    <div class="col-md-6 text-right">
      <%= link_to '添加小组', new_traveller_group_path, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>


<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>旅游线路</th>
      <th>组团社联系人</th>
      <th>出游日期</th>
      <th>应收款</th>
      <th>已收款</th>
      <th>代收款</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @traveller_groups.each do |traveller_group| %>
      <tr>
        <td><%= traveller_group.trip.name %></td>
        <td><%= traveller_group.agency_contact.try(:name) %></td>
        <td><%= traveller_group.trav_date %></td>
        <td><%= traveller_group.price_receivable %></td>
        <td><%= traveller_group.price_received %></td>
        <td><%= traveller_group.price_for_sb %></td>
        <td>
          <%= link_to '上传凭证', '#' %> | 
          <%= link_to '修改', edit_traveller_group_path(traveller_group) %> ｜ 
          <%= link_to '删除', traveller_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

