<!-- Form starts -->
<div class="awidget">
   <div class="awidget-head">
      <h3>导游</h3>
   </div>
   <div class="awidget-body">
       
<%= simple_form_for(@guide) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :mobile, required: true %>
    <%= f.input :license_number, required: true %>
    <% unless @guide.new_record? %>
      <%= f.input :qq %>
      <%= f.input :wechat %>
      <%= f.input :is_published %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

   </div>
</div>
<!-- Form ends -->    