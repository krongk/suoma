
<div class="header-title">
  <div class="row">
    <div class="col-md-6">
      <h1>导游管理</h1>
    </div>
    <div class="col-md-6 text-right">
      <%= link_to '添加导游', new_guide_path, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>编号</th>
      <th>姓名</th>
      <th>电话</th>
      <th>导游证</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @guides.each do |guide| %>
      <tr>
        <td><%= guide.id %></td>
        <td><%= guide.name %></td>
        <td><%= guide.mobile %></td>
        <td><%= guide.license_number %></td>
        <td>
          <%= link_to '修改', edit_guide_path(guide), class: 'btn btn-info' %> |
          <%= link_to '删除', guide, class: 'btn btn-warning', method: :delete, data: { confirm: '确定要删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
